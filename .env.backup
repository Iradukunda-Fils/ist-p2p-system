# ============================================================================
# P2P Procurement System - Development Environment
# ============================================================================
# Development configuration with secure defaults
# ============================================================================

ENVIRONMENT=development
COMPOSE_PROJECT_NAME=p2p_procurement

# Security dev
SECURE_SSL_REDIRECT = False
SECURE_HSTS_SECONDS = 0
SECURE_HSTS_INCLUDE_SUBDOMAINS = False
SECURE_HSTS_PRELOAD = False
SESSION_COOKIE_SECURE = False
CSRF_COOKIE_SECURE = False

# Django
SECRET_KEY=django-insecure-dev-key-replace-in-production-kj324h5kjh2k3j4h5kj23h4k5jh23k4j5h
DJANGO_SETTINGS_MODULE=config.settings.development
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost
MAX_UPLOAD_SIZE=52428800

# Database URL (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@db:5432/p2p_procurement

# Redis URLs (with password for security)
REDIS_PASSWORD=redis_dev_password
CACHE_URL=redis://:redis_dev_password@redis:6379/1
CELERY_BROKER_URL=redis://:redis_dev_password@redis:6379/2
CELERY_RESULT_BACKEND=redis://:redis_dev_password@redis:6379/3

# Superuser (auto-created on first run)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@p2p.local
DJANGO_SUPERUSER_PASSWORD=admin@123

# Application
APP_TITLE=P2P Procurement System (Dev)
BACKEND_PORT=8000
VITE_API_BASE_URL=/api
VITE_APP_TITLE=P2P Procurement System

# Gunicorn
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=300

# Celery
CELERY_WORKER_CONCURRENCY=2
CELERY_WORKER_LOG_LEVEL=info
CELERY_BEAT_LOG_LEVEL=info

# Ports
NGINX_PORT=80
REDIS_PORT=6379

# Logging
LOG_LEVEL=DEBUG
DJANGO_LOG_LEVEL=DEBUG

# Features
ENABLE_API_DOCS=true

