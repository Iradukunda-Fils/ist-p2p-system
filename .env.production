# ============================================================================
# P2P Procurement System - Production Environment Configuration
# ============================================================================
# SECURITY WARNING: Keep this file secure and never commit to version control
# ============================================================================

# ============================================================================
# DEPLOYMENT ENVIRONMENT
# ============================================================================
ENVIRONMENT=production
COMPOSE_PROJECT_NAME=p2p_procurement_prod

# ============================================================================
# DJANGO BACKEND CONFIGURATION
# ============================================================================

# Django Secret Key (CRITICAL: Generate a unique key for production!)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY_MIN_50_CHARS

# Django Settings Module
DJANGO_SETTINGS_MODULE=config.settings.production

# Debug Mode (MUST be False in production!)
DEBUG=False

# Allowed Hosts (comma-separated, no spaces - add your domain)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# CORS Origins (comma-separated, no spaces - add your frontend URLs)
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================
DATABASE_URL=postgresql://p2p_admin:REPLACE_WITH_SECURE_DATABASE_PASSWORD@db:5432/p2p_procurement_prod

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PASSWORD=REPLACE_WITH_SECURE_REDIS_PASSWORD
CACHE_URL=redis://:REPLACE_WITH_SECURE_REDIS_PASSWORD@redis:6379/0
CELERY_BROKER_URL=redis://:REPLACE_WITH_SECURE_REDIS_PASSWORD@redis:6379/1
CELERY_RESULT_BACKEND=redis://:REPLACE_WITH_SECURE_REDIS_PASSWORD@redis:6379/2

# ============================================================================
# SUPERUSER CREATION (Initial Setup Only)
# ============================================================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_ROLE=admin
DJANGO_SUPERUSER_EMAIL=admin@your-domain.com
DJANGO_SUPERUSER_PASSWORD=REPLACE_WITH_SECURE_ADMIN_PASSWORD

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_TITLE=P2P Procurement System
VITE_API_BASE_URL=https://your-domain.com/api
VITE_APP_TITLE=P2P Procurement System

# ============================================================================
# GUNICORN CONFIGURATION (Production)
# ============================================================================
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=300
GUNICORN_WORKER_CLASS=sync
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50

# ============================================================================
# CELERY CONFIGURATION (Production)
# ============================================================================
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_LOG_LEVEL=info
CELERY_BEAT_LOG_LEVEL=info

# ============================================================================
# FILE STORAGE & UPLOAD
# ============================================================================
MAX_UPLOAD_SIZE=52428800

# ============================================================================
# EMAIL CONFIGURATION (Production)
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@your-domain.com
EMAIL_HOST_PASSWORD=REPLACE_WITH_EMAIL_PASSWORD
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# ============================================================================
# LOGGING (Production)
# ============================================================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
SQL_LOG_LEVEL=WARNING

# ============================================================================
# SECURITY SETTINGS (Production)
# ============================================================================
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================================================
# PERFORMANCE TUNING (Production)
# ============================================================================
DB_CONN_MAX_AGE=600
CACHE_TTL=3600

# ============================================================================
# FEATURE FLAGS (Production)
# ============================================================================
ENABLE_API_DOCS=false
ENABLE_DEBUG_TOOLBAR=false

# ============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ============================================================================

# AWS S3 (if using cloud storage)
USE_S3=False
# AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY
# AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_KEY
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Sentry (Error Tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Monitoring
# MONITORING_API_KEY=your-monitoring-api-key